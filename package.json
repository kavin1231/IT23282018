{
  "name": "swift-translator-automation",
  "version": "1.0.0",
  "description": "Automated testing for Swift Translator Singlish to Sinhala conversion",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:positive": "playwright test positive-tests.spec.js",
    "test:negative": "playwright test negative-tests.spec.js",
    "test:ui": "playwright test ui-tests.spec.js",
    "test:headed": "playwright test --headed",
    "test:report": "playwright test --reporter=html",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0"
  },
  "dependencies": {
    "exceljs": "^4.4.0"
  }
}
